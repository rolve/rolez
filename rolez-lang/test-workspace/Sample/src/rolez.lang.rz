package rolez.lang

import rolez.io.PrintStream

mapped class Object {
	mapped def readonly equals(other: readonly Object): boolean
	mapped def readonly hashCode: int
	mapped def readonly toString: pure String
}

mapped class String {
	mapped new(chars: pure Array[char])
	
	mapped def pure length: int
	mapped def pure trim: pure String
	mapped def pure charAt(position: int): char
}

mapped class Array[T] {
	mapped new(i: int)
	mapped val length: int
	mapped def readonly  get(i: int): T
	mapped def readwrite set(i: int, o: T):
}

mapped object System {
	mapped val out: readonly PrintStream
	mapped def pure exit(status: int):
}